	chmod -Rf 777 /usr/haskell-stuff && \
	chmod -Rf 777 /usr/hodgepodge && \	
	chmod -Rf 777 /srv/java-stuff && \
	chmod -Rf 777 /usr/lisp-stuff && \
	chmod -Rf 777 /usr/nodejs-stuff && \	
